<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon_item"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="$50,000"
        android:id="@+id/original_amount"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:textColor="@color/text_color"
        android:textStyle="italic"
        android:layout_below="@+id/transaction_date"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+ $500"
        android:id="@+id/transaction_up"
        android:textColor="@color/green_main"
        android:layout_alignTop="@+id/icon_item"
        android:layout_toRightOf="@+id/icon_item"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20px"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/transaction_down"
        android:textColor="@color/circular_progress_danger_progress"
        android:layout_alignTop="@+id/icon_item"
        android:layout_toRightOf="@+id/icon_item"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="30/09/29"
        android:id="@+id/transaction_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@drawable/line_item_background"
        android:layout_below="@+id/icon_item"
        android:layout_marginTop="10dp"></FrameLayout>


</RelativeLayout>